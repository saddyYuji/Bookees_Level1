<p id="notice">
	<%= notice %> <!--サクセスメッセージ-->
</p>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<!-- ここで繰り返しを開始し、各行を生成する -->
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td>
					<%= book.title %>
				</td>
				<td>
					<%= book.body %>
				</td>
				<td>
					<%= link_to 'show', book_path(book.id) %>
				</td>
				<td>
					<!--
					<%= link_to 'edit', edit_book_path(book.id) %>
					 -->
					<%= link_to 'edit', "/books/#{book.id}/edit" %>
				</td>
				<td>
					<%= link_to 'destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<!-- 新規投稿 -->
<h2>New book</h2>
<div class="new">
	<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Body</p>
		<%= f.text_area :body %>
		<%= f.submit 'Create Book' %>
	<% end %>
</div>
